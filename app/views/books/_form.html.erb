<div class="container">
	<div class="row">
		<%= form_for @book, :html => {:role => "form", :class => "contact-form", :id => "contact-form"} do |b| %>
            <div class="row">
                <div class="col-md-6">
                  <h3>Add new book</h3><br>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= b.text_field :name, class: "form-control", autocomplete: "off", placeholder: "Book name*", :pattern => '([a-z]|[A-Z]| |,|.)+' %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <%= b.text_field :author, class: "form-control", autocomplete: "off", placeholder: "Author*", :pattern => '([a-z]|[A-Z]| |.)+' %>
                        </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= b.text_field :year, class: "form-control", autocomplete: "off", placeholder: "Year* (must be a number, example: 2007)", :pattern => '[0-9]+' %>
                  </div>
                </div>
                <div class="col-md-6">
                    <%= b.collection_select(:category_id, @category, :id, :name, {:prompt => 'Choose a Category...'}, {:class => 'form-control', :selected => params[:category_id]}) %>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                  <%= b.submit "Add book", class: "btn main-btn pull-right" %>
                </div>
            </div>
        <% end %>
	</div>
</div>