<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.2/css/bootstrapValidator.min.css"/>
<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.2/js/bootstrapValidator.min.js"></script>
<div class="container">
	<div class="row">
		<%= form_for @category, :html => {:role => "form", :class => "contact-form", :id => "contact-form"} do |c| %>
            <div class="row">
                <div class="col-md-6">
                  <h3>Add new category</h3><br>
                	<div class="form-group">
                		<%= c.text_field :name, class: "form-control", autocomplete: "off", placeholder: "Category name" %>
                 	</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                  <%= c.submit "Add category", class: "btn main-btn pull-right" %>
                </div>
            </div>
        <% end %>
	</div>
</div>