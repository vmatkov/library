<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.2/css/bootstrapValidator.min.css"/>
<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.2/js/bootstrapValidator.min.js"></script>
<div class="container">
	<div class="row">
		<%= form_for @book, :html => {:role => "form", :class => "contact-form", :id => "contact-form"} do |b| %>
            <div class="row">
                <div class="col-md-6">
                  <h3>Add new book</h3><br>
                	<div class="form-group">
                		<%= b.text_field :name, class: "form-control", autocomplete: "off", placeholder: "Book name", :pattern => '([a-z]|[A-Z]| |,|.)+', :required => true %>
                 	</div>
                </div>
                <div class="col-md-6">
                  	<div class="form-group">
                        <%= b.text_field :author, class: "form-control", autocomplete: "off", placeholder: "Author", :pattern => '([a-z]|[A-Z]| |.)+', :required => true %>
                  	</div>
                </div>
            </div>
            <div class="row">
                  	<div class="col-md-6">
                  		<div class="form-group">
                            <%= b.text_field :year, class: "form-control", autocomplete: "off", placeholder: "Year", :pattern => '[0-9]+', :required => true %>
                  		</div>
                  	</div>
            </div>
            <div class="row">
              <% @category.each do |c| %>
                <div class="radiobutton">
                  <input type="radio" id="<%= c.name %>" name="book[category_id]" class="radio" value="<%= c.id %>">
                  <label for="<%= c.name %>"><%= c.name %></label>
                </div>
              <% end %>
            </div>
            <div class="row">
                <div class="col-md-12">
                  <%= b.submit "Add book", class: "btn main-btn pull-right" %>
                </div>
            </div>
        <% end %>
	</div>
</div>