<div class="container">
    <div class="row">
        <div class="panel panel-primary filterable">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <%= link_to "図書 (Books)", books_path %> | <%= link_to "カテゴリー (Categories)", categories_path %> 
                </h3>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><i class="icon-filter"></i> Filter</button>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr class="filters">                  
                        <th><input type="text" class="form-control" placeholder="名前 (Name)" disabled></th>
                        <th><input type="text" class="form-control" placeholder="カテゴリ (Category)" disabled></th>
                        <th><input type="text" class="form-control" placeholder="エディット (Edit)" disabled></th>
                        <th><input type="text" class="form-control" placeholder="デリート (Delete)" disabled></th>
                    </tr>
                </thead>
                <tbody>
                	<% @books.each do |b| %>
	                    <tr>
	                        <td><%= link_to b.name, book_path(b) %></td>
	                        <td><%= b.category_name %></td>
	                        <td><%= link_to edit_book_path(b) do %> <i class="icon-edit"></i><%end%></td>
	                        <td>Delete (comming soon..)</td>
	                    </tr>
	                <% end %>
	                <%= link_to 'Create new book', books_new_path %>
                </tbody>
            </table>
        </div>
    </div>
</div>